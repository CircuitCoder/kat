{
  "name": "kat",
  "version": "0.2",
  "description": "Kat kAt kaT",
  "manifest_version": 2,

  "permissions": ["tabs", "storage", "alarms", "notifications"],

  "background": {
    "scripts": ["background.js"],
    "persistent": false
  },

  "browser_action": {
    "default_popup": "popup.html",
    "default_title": "Kat",
    "default_icon": {
      "128": "img/default_icon.png"
    }
  },

  "icons": {
    "128": "img/default_icon.png"
  }
}
